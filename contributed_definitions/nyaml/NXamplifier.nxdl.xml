<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" name="NXamplifier" extends="NXobject" type="group" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <doc>
         Application definition for lock in devices.
    </doc>
    <group name="hardware" type="NXfabrication">
        <doc>
             (IC, device) (NXmanufacturer?)
        </doc>
    </group>
    <field name="NumOfChannels" type="NX_NUMBER"/>
    <field name="ActiveChannels" type="NX_NUMBER">
        <doc>
             (array of chIDs)
        </doc>
    </field>
    <field name="openloop_amplification" type="NX_NUMBER">
        <doc>
             (array for active channels)
        </doc>
    </field>
    <field name="amplification" type="NX_NUMBER">
        <doc>
             (array for active channels)
        </doc>
    </field>
    <field name="signal_over_noise" type="NX_NUMBER">
        <doc>
             (array for active channels)
        </doc>
    </field>
    <field name="crosstalk_factor" type="NX_NUMBER">
        <doc>
             (if active &gt;1)
        </doc>
    </field>
    <field name="crosstalk_compensation" type="NX_BOOLEAN"/>
    <field name="bandwidth" type="NX_NUMBER"/>
    <field name="LowPass" type="NX_NUMBER">
        <doc>
             cut-off frq (low pass filter)
        </doc>
    </field>
    <field name="HiPass" type="NX_NUMBER">
        <doc>
             cut-off frq (hi pass filter)
        </doc>
    </field>
    <field name="type">
        <enumeration>
            <item value="current"/>
            <item value="voltage"/>
        </enumeration>
    </field>
</definition>
