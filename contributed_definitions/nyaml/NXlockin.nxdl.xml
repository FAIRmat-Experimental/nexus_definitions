<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" name="NXlockin" extends="NXobject" type="group" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <doc>
         Application definition for lock in devices.
    </doc>
    <group name="hardware" type="NXfabrication"/>
    <group type="NXamplifier">
        <doc>
             input and output amplifiers
        </doc>
    </group>
    <field name="frequency" type="NX_NUMBER" units="NX_FREQUENCY"/>
    <field name="NumOfDemodulatorChannels" type="NX_NUMBER"/>
    <field name="LowPass" type="NX_NUMBER">
        <doc>
             cut-off frq (low pass filter) (foreach DemodulatorChannels)
        </doc>
    </field>
    <field name="HiPass" type="NX_NUMBER">
        <doc>
             cut-off frq (hi pass filter) (foreach DemodulatorChannels)
        </doc>
    </field>
    <field name="Synch" type="NX_NUMBER">
        <doc>
             filter (foreach DemodulatorChannels)
        </doc>
    </field>
    <field name="refPhase" type="NX_NUMBER">
        <doc>
             (foreach DemodulatorChannels)
        </doc>
    </field>
    <field name="integrationTime" type="NX_NUMBER" units="NX_TIME">
        <doc>
             (for the input filter)
        </doc>
    </field>
    <field name="NumOfHarmonics" type="NX_NUMBER"/>
    <field name="sensitivityFactor" type="NX_NUMBER">
        <doc>
             (input gain)
        </doc>
    </field>
</definition>
