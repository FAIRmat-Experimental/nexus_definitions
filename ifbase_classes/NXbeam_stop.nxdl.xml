<definition xmlns="http://definition.nexusformat.org/nxdl/@NXDL_RELEASE@" category="base"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://definition.nexusformat.org/nxdl/@NXDL_RELEASE@ ../nxdl.xsd"
    name="NXbeam_stop"
    version="1.0"
    svnid="$Id: NXbeam_stop.nxdl.xml 1248 2013-11-21 10:18:19Z Mark Koennecke $"
    type="group" extends="NXobject">

    <doc>
      A class for a beamstop. Beamstops and their positions are important for SANS
      and SAXS experiments.
    </doc>
	<attribute name="implements" type="NX_CHAR">
		<doc>
			NXbeam_stop can implement: NXIFbeamline_component, NXIFmetadata
		</doc>
	</attribute>
    <group type="NXgeometry">
        <doc>engineering shape, orientation and position of the beam stop.</doc>
    </group>
    <field name="size" type="NX_FLOAT" units="NX_LENGTH">
        <doc>size of beamstop</doc>
    </field>
    <field name="status">
        <enumeration>
            <item value="in"/>
            <item value="out"/>
        </enumeration>
    </field>
</definition>
