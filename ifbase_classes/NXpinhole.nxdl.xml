<definition
    name="NXpinhole" 
    type="group"
    extends="NXobject"
    category="base"
    version="1.0"
    xmlns="http://definition.nexusformat.org/nxdl/@NXDL_RELEASE@"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://definition.nexusformat.org/nxdl/@NXDL_RELEASE@ ../nxdl.xsd"
    svnid="$Id: NXpinhole.nxdl.xml 1144 2012-09-21 11:13:24Z Pete Jemian $">

    <doc>
		Reduce the size of an input beam by filtering out a circular section from it.
    </doc>
	<attribute name="implements" type="NX_CHAR">
		<doc>
			NXattenuator can implement: NXIFbeamline_component, NXIFmetadata
		</doc>
	</attribute>
    <field name="diameter" type="NX_FLOAT" units="NX_LENGTH">
        <doc>Diameter of the pinhole</doc>
    </field>
</definition>
